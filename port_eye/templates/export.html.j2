<body>

    <h1 class="report-title">Scanning Report {{ date }}</h1>

    <div class="category-wrapper">
        <h3 class="category-title">
            Global information
        </h3>
        <table class="global-table">
            <tr>
                <th class="global-table-header">Duration</th>
                <th class="global-table-header">Tested hosts</th>
                <th class="global-table-header">Online</th>
            </tr>
            <tr>
                <td class="global-table-content">13s</td>
                <td class="global-table-content">42</td>
                <td class="global-table-content">12</td>
            </tr>
        </table>
    </div>

       
    <div class="category-wrapper">
        <h3 class="category-title">
            Machines Summary
        </h3>

        <div class="hosts-count"><span class="temp">42</span> Machines detected online</div>

        <table class="status-table">
            <tr>
                <th>Host</th>
                <th>Status</th>
            </tr>
            {% for host in hosts_status %}
            <tr>
                <td>{{ host.ip }}</td>
                {% if host.status == "up" %}
                    <td class="status-up">{{ host.status }}</td>
                {% else %}
                    <td class="status-down">{{ host.status }}</td>
                {% endif %}                
            </tr>
            {% endfor %}
        </table>
    </div>


    <div>
        <h3 class="category-title">
            Detailed Results
        </h3>
        <div class="detailed-info-wrapper">

